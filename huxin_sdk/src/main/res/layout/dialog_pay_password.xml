<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/pay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请输入支付密码"
            android:textColor="#2d363d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/hx_btn_close" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_lishi_m"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="5.3"
        android:textColor="#2d363d"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_password_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_box1"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/color_pay_password_width"
            android:layout_height="match_parent"
            android:background="@color/color_pay_password_divide" />

        <TextView
            android:id="@+id/pay_box2"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/color_pay_password_width"
            android:layout_height="match_parent"
            android:background="@color/color_pay_password_divide" />

        <TextView
            android:id="@+id/pay_box3"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/color_pay_password_width"
            android:layout_height="match_parent"
            android:background="@color/color_pay_password_divide" />

        <TextView
            android:id="@+id/pay_box4"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/color_pay_password_width"
            android:layout_height="match_parent"
            android:background="@color/color_pay_password_divide" />

        <TextView
            android:id="@+id/pay_box5"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/color_pay_password_width"
            android:layout_height="match_parent"
            android:background="@color/color_pay_password_divide" />

        <TextView
            android:id="@+id/pay_box6"
            style="@style/InputTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="密码错误"
            android:textColor="@color/hx_color_red_tag"
            android:visibility="invisible" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="忘记密码?"
            android:textColor="#36adfd" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="40dp"
        android:background="#CFCFCF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="2"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginRight="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="3"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="4"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginRight="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="6"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="7"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="8"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginRight="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="9"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/color_pay_password_width"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@color/color_pay_password_divide"
                android:clickable="false"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pay_keyboard_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/color_pay_password_width"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="0"
                android:textColor="#000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/pay_keyboard_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/color_pay_password_width"
                android:layout_marginLeft="@dimen/color_pay_password_width"
                android:layout_marginRight="@dimen/color_pay_password_width"
                android:layout_marginTop="@dimen/color_pay_password_width"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/face_del_icon"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/keyboard"
        android:layout_alignParentLeft="true"
        android:background="#9b9b9b" />

</LinearLayout>
