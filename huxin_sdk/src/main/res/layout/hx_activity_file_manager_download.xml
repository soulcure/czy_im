<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itemView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/hx_activity_header_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hx_file_manager_select_01"
            android:textColor="@color/hx_text_color" />

        <TextView
            android:id="@+id/tv_file_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hx_file_manager_download"
            android:textColor="@color/hx_text_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/hxs_color_white">

        <com.youmai.hxsdk.module.filemanager.view.FileDownloadItemView
            android:id="@+id/ll_item_download"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            itemView:count="@string/hx_file_manager_zero_count"
            itemView:logo="@drawable/hx_file_manager_download_logo"
            itemView:name="@string/hx_file_manager_download_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/hxs_color_gray16" />

        <com.youmai.hxsdk.module.filemanager.view.FileDownloadItemView
            android:id="@+id/ll_item_weixin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            itemView:count="@string/hx_file_manager_zero_count"
            itemView:logo="@drawable/hx_file_manager_weixin_logo"
            itemView:name="@string/hx_file_manager_weixin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:background="@color/hxs_color_gray16" />

        <com.youmai.hxsdk.module.filemanager.view.FileDownloadItemView
            android:id="@+id/ll_item_qq"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            itemView:count="@string/hx_file_manager_zero_count"
            itemView:logo="@drawable/hx_file_manager_qq_logo"
            itemView:name="@string/hx_file_manager_qq" />

    </LinearLayout>

</LinearLayout>