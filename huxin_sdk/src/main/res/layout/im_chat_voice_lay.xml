<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/chat_voice_record"
        android:drawableLeft="@drawable/hx_im_bar_audio_garbage_icon"
        android:text="@string/audio_garbage_indicate"
        android:textColor="#AAAAAA"
        android:textSize="16sp" />

    <com.youmai.hxsdk.view.chat.view.RecordingView
        android:id="@+id/chat_voice_record"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/chat_voice_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/hx_im_bar_record_normal" />

    <TextView
        android:id="@+id/chat_voice_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_voice_img"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="@string/hx_voice_tip_normal"
        android:textColor="@color/audio_font_normal"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_voice_tip"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="0s"
        android:textColor="@color/audio_font_normal"
        android:textSize="24sp" />

</RelativeLayout>