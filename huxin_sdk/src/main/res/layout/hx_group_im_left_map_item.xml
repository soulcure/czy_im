<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sender_date"
        style="@style/im_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hx_fragment_im_data" />

    <LinearLayout style="@style/im_content_card_style">

        <ImageView
            android:id="@+id/sender_iv"
            android:layout_width="@dimen/card_head"
            android:layout_height="@dimen/card_head"
            android:src="@drawable/hx_im_user_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="成员1" />

            <FrameLayout
                android:id="@+id/item_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/sender_map"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/hx_im_card_map_left"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="0.5dp"
                    android:paddingRight="0.5dp"
                    android:paddingTop="0.5dp" />

                <TextView
                    android:id="@+id/sender_addr"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/hx_circle_bottom_corner_bg"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:textColor="@color/hx_item_left_font"
                    android:textSize="14sp" />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
