<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/video_controller_bottom"
        layout="@layout/hx_video_controller_bottom" />

    <com.youmai.hxsdk.module.videoplayer.view.VideoErrorView
        android:id="@+id/video_controller_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <include
        android:id="@+id/video_controller_title"
        layout="@layout/hx_video_controller_title" />

    <ImageView
        android:id="@+id/video_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/hx_icon_full_video_play"
        android:visibility="gone"/>

</RelativeLayout>