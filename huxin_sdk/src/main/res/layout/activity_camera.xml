<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraActivity">

    <com.youmai.hxsdk.view.camera.JCameraView
        android:id="@+id/jcameraview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:duration_max="10000"
        app:iconLeft="@drawable/hx_camera_back_icon"
        app:iconMargin="20dp"
        app:iconRight="@drawable/hx_camera_switch_icon"
        app:iconSize="30dp"
        app:iconSrc="@drawable/hx_camera_switch_ic" />

</LinearLayout>
