<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_parent"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/search_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/hx_btn_back_selector"
        android:gravity="center_vertical"
        android:textColor="@color/hxs_color_white"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/search_bar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="取消"
        android:textColor="@color/color_theme_main"
        android:textSize="15sp" />

    <com.tg.coloursteward.module.search.SearchEditText
        android:id="@+id/contact_search_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/search_bar_cancel"
        android:layout_toRightOf="@id/search_bar_back"
        android:background="@drawable/global_contacts_search_bg"
        android:drawablePadding="12dp"
        android:hint="搜索"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:textColorHint="@color/hxb_subtitle_color"
        android:textSize="15sp" />
</RelativeLayout>