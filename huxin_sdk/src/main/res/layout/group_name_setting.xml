<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hxs_color_white"
    android:orientation="vertical">

    <include layout="@layout/group_header_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="群名称"
        android:textColor="#999999"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/hx_color_white"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="42dp"
            android:background="@null"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:textColor="@color/color_theme_main"
            android:textCursorDrawable="@drawable/edit_cursor_shape"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_user_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/hx_edit_clean"
            android:padding="10dp" />

    </RelativeLayout>

    <include layout="@layout/global_bottom_tip" />

</LinearLayout>